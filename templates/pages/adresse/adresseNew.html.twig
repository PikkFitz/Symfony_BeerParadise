{% extends "base.html.twig" %}

{% block title %}BeerParadise - Nouvelle adresse{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Ajout d'une adresse</h1>
        <hr class="my-2">

        <a href="{{path("adresse.index")}}" class="btn btn-primary btn-sm" title="Retour">Retour</a>

        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom) }}
                <div class="form-error">
                   {{ form_errors(form.nom) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.adresse) }}
                {{ form_widget(form.adresse) }}
                <div class="form-error">
                   {{ form_errors(form.adresse) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.codePostal) }}
                {{ form_widget(form.codePostal) }}
                <div class="form-error">
                   {{ form_errors(form.codePostal) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.ville) }}
                {{ form_widget(form.ville) }}
                <div class="form-error">
                   {{ form_errors(form.ville) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.pays) }}
                {{ form_widget(form.pays) }}
                <div class="form-error">
                   {{ form_errors(form.pays) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_row(form.submit, {'label': 'Valider l\'adresse' }) }}  
            </div>

        {{ form_end(form) }}

    </div>

{% endblock %}